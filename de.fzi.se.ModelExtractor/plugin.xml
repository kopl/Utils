<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Parse Code with JaMoPP"
            id="de.fzi.se.ModelExtractor.commands.extraction"
            name="Extraction">
      </category>
      <command
            categoryId="de.fzi.se.ModelExtractor.commands.extraction"
            description="Parses the model of the selected container into single xmi file. You will have to specify a location to safe to."
            id="de.fzi.se.ModelExtractor.commands.extractionCommand"
            name="Parse into single xmi file">
      </command>
      <command
            categoryId="de.fzi.se.ModelExtractor.commands.extraction"
            description="Parses the model of the selected container into multiple xmi files - one for each source file. You will have to specify a location to safe to."
            id="de.fzi.se.ModelExtractor.commands.multiExtractionCommand"
            name="Parse into multiple xmi files">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="de.fzi.se.ModelExtractor.commands.extractionCommand"
            class="de.fzi.se.modelextractor.handlers.ExtractionHandler">
      </handler>
      <handler
            class="de.fzi.se.modelextractor.handlers.MultipleExtractionHandler"
            commandId="de.fzi.se.ModelExtractor.commands.multiExtractionCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <menu
               label="Extract using JaMoPP">
            <command
                  commandId="de.fzi.se.ModelExtractor.commands.extractionCommand"
                  id="de.fzi.se.ModelExtractor.menus.extractionCommand"
                  mnemonic="S">
               <visibleWhen>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <adapt
                                 type="org.eclipse.jdt.core.IJavaProject">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.core.IPackageFragmentRoot">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.core.IPackageFragment">
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="de.fzi.se.ModelExtractor.commands.multiExtractionCommand"
                  id="de.fzi.se.ModelExtractor.menus.multiExtractionCommand"
                  mnemonic="M">
               <visibleWhen>
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="false">
                        <or>
                           <adapt
                                 type="org.eclipse.jdt.core.IJavaProject">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.core.IPackageFragmentRoot">
                           </adapt>
                           <adapt
                                 type="org.eclipse.jdt.core.IPackageFragment">
                           </adapt>
                        </or>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
